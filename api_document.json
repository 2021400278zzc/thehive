    "/api/projects": {
      "post": {
        "tags": ["项目"],
        "summary": "创建项目",
        "description": "创建新的项目",
        "operationId": "createProject",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["name", "project_type", "end_time", "user_id"],
                "properties": {
                  "name": {
                    "type": "string",
                    "description": "项目名称"
                  },
                  "project_type": {
                    "type": "string",
                    "description": "项目类型"
                  },
                  "end_time": {
                    "type": "string",
                    "format": "date-time",
                    "description": "项目结束时间"
                  },
                  "description": {
                    "type": "string",
                    "description": "项目描述"
                  },
                  "goal": {
                    "type": "string",
                    "description": "项目目标"
                  },
                  "user_id": {
                    "type": "string",
                    "description": "创建者Auth0用户标识"
                  },
                  "skill_requirements": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "required": ["skill_type_id", "required_count", "importance"],
                      "properties": {
                        "skill_type_id": {
                          "type": "integer",
                          "description": "技能类型ID"
                        },
                        "required_count": {
                          "type": "integer",
                          "description": "需要的人数"
                        },
                        "importance": {
                          "type": "integer",
                          "minimum": 1,
                          "maximum": 5,
                          "description": "重要程度(1-5)"
                        },
                        "description": {
                          "type": "string",
                          "description": "技能描述"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "项目创建成功",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "项目创建成功"
                    },
                    "data": {
                      "$ref": "#/components/schemas/Project"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "请求参数有误",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "500": {
            "description": "服务器错误",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      },
