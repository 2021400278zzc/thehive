      "post": {
        "tags": ["用户"],
        "summary": "创建用户",
        "description": "创建新用户，邮箱是必填项",
        "operationId": "createUser",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["email"],
                "properties": {
                  "email": {
                    "type": "string",
                    "description": "用户邮箱",
                    "format": "email"
                  },
                  "full_name": {
                    "type": "string",
                    "description": "用户全名"
                  },
                  "gender": {
                    "type": "string",
                    "description": "性别"
                  },
                  "mbti": {
                    "type": "string",
                    "description": "MBTI性格类型"
                  },
                  "star_sign": {
                    "type": "string",
                    "description": "星座"
                  },
                  "skills": {
                    "type": "string",
                    "description": "技能"
                  },
                  "interests": {
                    "type": "string",
                    "description": "兴趣"
                  },
                  "year_of_study": {
                    "type": "string",
                    "description": "学习年限"
                  },
                  "major": {
                    "type": "string",
                    "description": "专业"
                  },
                  "key_factors": {
                    "oneOf": [
                      {
                        "type": "string",
                        "description": "关键因素（字符串形式）"
                      },
                      {
                        "type": "object",
                        "description": "关键因素（对象形式）",
                        "additionalProperties": {
                          "type": "string"
                        }
                      }
                    ]
                  },
                  "lightning_answers": {
                    "type": "object",
                    "description": "快速回答",
                    "additionalProperties": {
                      "type": "string"
                    }
                  },
                  "picture": {
                    "type": "string",
                    "description": "用户头像URL"
                  },
                  "user_id": {
                    "type": "string",
                    "description": "Auth0用户标识"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "用户创建成功",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "用户创建成功"
                    },
                    "data": {
                      "$ref": "#/components/schemas/User"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "请求参数有误",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "500": {
            "description": "服务器错误",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      },
